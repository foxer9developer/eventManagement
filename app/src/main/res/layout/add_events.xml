<?xml version="1.0" encoding="utf-8"?>

<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="match_parent"
android:layout_width="match_parent">



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_events"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@android:dimen/thumbnail_width"

    tools:context=".add_events">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter event type"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#a52a2a"
        android:id="@+id/type"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/entertype"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#a52a2a"
        android:text="Date"
        android:id="@+id/date"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/enterdate"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter  event duration"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#a52a2a"
        android:id="@+id/duration"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/enterduration"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter event name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#a52a2a"
        android:id="@+id/name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/entername"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#a52a2a"
        android:text="Venue"
        android:id="@+id/venue"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/entervenue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About the event "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#a52a2a"
        android:id="@+id/about"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/enterabout"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anything special about this event ? (Like a special guest appearance, stars, bands or some food specialities)"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#a52a2a"
        android:id="@+id/specialities"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/enterspecial"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#a52a2a"
        android:text="Specify who all can attend the event"
        android:id="@+id/attendees"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anyone with a ticket"
        android:id="@+id/ticket"
        android:onClick="onRadioClick"
        />


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anyone without a ticket"
        android:id="@+id/noticket"
        android:onClick="onRadioClick"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First years only"
        android:id="@+id/vip"
        android:onClick="onRadioClick"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second years only"
        android:id="@+id/army"
        android:onClick="onRadioClick"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/other"
        android:onClick="onRadioClick"
        android:text="Third years only" />

    <RadioButton
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRadioClick"
        android:text="Fourth years only" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other batches"
        android:id="@+id/other"
        android:onClick="onRadioClick"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/add"/>

</LinearLayout>
</ScrollView>